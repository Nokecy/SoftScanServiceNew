<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants">

    <CheckBox
        android:scaleX="1.2"
        android:scaleY="1.2"
        android:id="@+id/cb_codeset_enable"
        android:layout_width="@dimen/codeset_item_checkbox_width"
        android:layout_height="@dimen/codeset_item_checkbox_height"
        android:layout_marginLeft="@dimen/codeset_item_checkbox_margin_left"
        android:layout_centerInParent="true"
        android:layout_alignParentLeft="true"
        android:clickable="false"/>

    <TextView
        android:id="@+id/tv_codeset_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/cb_codeset_enable"
        android:layout_marginLeft="@dimen/codeset_item_textview_margin_left"
        android:layout_centerVertical="true"
        android:text="@string/menu_item_hint"
        android:textColor="@android:color/black"
        android:textSize="@dimen/codeset_item_textview_btn_text_size"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btn_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/codeset_item_btn_margin"
        android:background="@drawable/btn_selector"
        android:text="@string/codeset_btn_details"
        android:textAllCaps="false"
        android:textSize="@dimen/codeset_item_textview_btn_text_size"
        android:layout_alignParentEnd="true" />

</RelativeLayout>